<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".InternalStorageActivity">

    <EditText
        android:id="@+id/edtv_filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Filename"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/edtv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Details"
        android:lines="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtv_filename"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Save to Internal Storage"
        app:layout_constraintEnd_toEndOf="@+id/edtv_details"
        app:layout_constraintStart_toStartOf="@+id/edtv_details"
        app:layout_constraintTop_toBottomOf="@+id/edtv_details" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="2dp"
        android:layout_marginVertical="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_save"/>

    <EditText
        android:id="@+id/edtv_getfilename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Filename"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Read File From Internal Storage"
        app:layout_constraintEnd_toEndOf="@+id/edtv_details"
        app:layout_constraintStart_toStartOf="@+id/edtv_details"
        app:layout_constraintTop_toBottomOf="@+id/edtv_getfilename" />

    <TextView
        android:id="@+id/tvread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/edtv_details"
        app:layout_constraintStart_toStartOf="@+id/edtv_details"
        app:layout_constraintTop_toBottomOf="@+id/btn_read"/>


</androidx.constraintlayout.widget.ConstraintLayout>